#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

int shared = 0;      // Shared resource
int readcount = 0;   // Number of active readers

sem_t mutex;   // Protect readcount
sem_t wrt;     // Protect shared resource

void* reader(void* arg) {
    int id = *(int*)arg;

    sem_wait(&mutex);
    readcount++;
    if (readcount == 1)
        sem_wait(&wrt);  // First reader locks resource
    sem_post(&mutex);

    // Reading
    printf("Reader %d is reading shared value = %d\n", id, shared);
    sleep(1);

    sem_wait(&mutex);
    readcount--;
    if (readcount == 0)
        sem_post(&wrt);  // Last reader releases resource
    sem_post(&mutex);

    return NULL;
}

void* writer(void* arg) {
    int id = *(int*)arg;

    sem_wait(&wrt);  // Lock resource exclusively

    shared += 10;
    printf("Writer %d updated shared value to %d\n", id, shared);
    sleep(1);

    sem_post(&wrt);  // Release resource
    return NULL;
}

int main() {
    pthread_t r[5], w[2];
    int r_id[5] = {1,2,3,4,5};
    int w_id[2] = {1,2};

    sem_init(&mutex, 0, 1);
    sem_init(&wrt, 0, 1);

    // Create writer threads
    for (int i = 0; i < 2; i++)
        pthread_create(&w[i], NULL, writer, &w_id[i]);

    // Create reader threads
    for (int i = 0; i < 5; i++)
        pthread_create(&r[i], NULL, reader, &r_id[i]);

    // Join all threads
    for (int i = 0; i < 2; i++)
        pthread_join(w[i], NULL);
    for (int i = 0; i < 5; i++)
        pthread_join(r[i], NULL);

    sem_destroy(&mutex);
    sem_destroy(&wrt);

    return 0;
}

#include <stdio.h>
#include <string.h>

#define MAX 20

struct file {
    char fname[20];
};

int main() {
    struct file dir[MAX];
    int n, i, choice;
    char name[20];

    printf("Enter number of files: ");
    scanf("%d", &n);

    // Create directory
    for (i = 0; i < n; i++) {
        printf("Enter file name %d: ", i + 1);
        scanf("%s", dir[i].fname);
    }

    do {
        printf("\n--- Single Level Directory ---\n");
        printf("1. Display files\n");
        printf("2. Search file\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("\nFiles in directory:\n");
            for (i = 0; i < n; i++)
                printf("%s\n", dir[i].fname);
            break;

        case 2:
            printf("Enter file name to search: ");
            scanf("%s", name);
            for (i = 0; i < n; i++) {
                if (strcmp(name, dir[i].fname) == 0) {
                    printf("File found: %s\n", name);
                    break;
                }
            }
            if (i == n)
                printf("File not found\n");
            break;

        case 3:
            printf("Exiting...\n");
            break;

        default:
            printf("Invalid choice\n");
        }
    } while (choice != 3);

    return 0;
}

#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <sys/types.h>
#include <unistd.h>
#include <string.h>

int main() {
    int shmid;
    char *shmaddr;
    key_t key = 1234;

    /* Create shared memory */
    shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    if (shmid < 0) {
        perror("shmget failed");
        return 1;
    }

    /* Attach shared memory */
    shmaddr = (char *)shmat(shmid, NULL, 0);

    if (fork() == 0) {
        /* Child process writes to shared memory */
        strcpy(shmaddr, "Hello from Child Process");
        printf("Child: Data written to shared memory\n");
    } else {
        /* Parent waits and reads */
        sleep(1);
        printf("Parent: Data read from shared memory: %s\n", shmaddr);

        /* Detach and remove shared memory */
        shmdt(shmaddr);
        shmctl(shmid, IPC_RMID, NULL);
    }

    return 0;
}

#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main()
{
    pid_t pid;

    pid = fork();   // Create new process

    if (pid < 0)
    {
        printf("Process creation failed\n");
        return 1;
    }
    else if (pid == 0)
    {
        // Child process
        printf("Child Process\n");
        printf("PID  : %d\n", getpid());
        printf("PPID : %d\n", getppid());
    }
    else
    {
        // Parent process
        printf("Parent Process\n");
        printf("PID  : %d\n", getpid());
        printf("PPID : %d\n", getppid());
    }

    return 0;
}

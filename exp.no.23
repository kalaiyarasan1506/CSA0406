#include <stdio.h>

int main() {
    int m, n;

    printf("Enter number of memory blocks: ");
    scanf("%d", &m);
    int blockSize[m];
    printf("Enter sizes of memory blocks:\n");
    for (int i = 0; i < m; i++)
        scanf("%d", &blockSize[i]);

    printf("Enter number of processes: ");
    scanf("%d", &n);
    int processSize[n];
    printf("Enter sizes of processes:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &processSize[i]);

    int allocation[n];
    for (int i = 0; i < n; i++)
        allocation[i] = -1;  // Initially not allocated

    // First Fit Allocation
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (blockSize[j] >= processSize[i]) {
                allocation[i] = j;
                blockSize[j] -= processSize[i];
                break;  // Allocate to first suitable block
            }
        }
    }

    // Display allocation
    printf("\nFirst Fit Memory Allocation:\n");
    printf("Process No\tProcess Size\tBlock No\n");
    for (int i = 0; i < n; i++) {
        if (allocation[i] != -1)
            printf("%d\t\t%d\t\t%d\n", i+1, processSize[i], allocation[i]+1);
        else
            printf("%d\t\t%d\t\tNot Allocated\n", i+1, processSize[i]);
    }

    return 0;
}

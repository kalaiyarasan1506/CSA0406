#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, head;
    int req[50];
    int totalSeek = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter the disk request sequence:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("\nDisk Head Movement:\n");
    printf("%d", head);

    for (i = 0; i < n; i++) {
        totalSeek += abs(req[i] - head);
        head = req[i];
        printf(" -> %d", head);
    }

    printf("\n\nTotal Seek Time = %d\n", totalSeek);

    return 0;
}

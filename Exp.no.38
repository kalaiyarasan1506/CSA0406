#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size, direction;
    int i, j, seek = 0, temp;
    int req[50];

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter disk requests:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &disk_size);

    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &direction);

    /* Sort the requests */
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (req[i] > req[j]) {
                temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }
        }
    }

    printf("\nSeek Sequence:\n");

    if (direction == 1) {  // Moving right
        for (i = 0; i < n; i++) {
            if (req[i] >= head) {
                printf("%d ", req[i]);
                seek += abs(head - req[i]);
                head = req[i];
            }
        }
        seek += abs(head - (disk_size - 1));
        head = disk_size - 1;

        for (i = n - 1; i >= 0; i--) {
            if (req[i] < head) {
                printf("%d ", req[i]);
                seek += abs(head - req[i]);
                head = req[i];
            }
        }
    } else {  // Moving left
        for (i = n - 1; i >= 0; i--) {
            if (req[i] <= head) {
                printf("%d ", req[i]);
                seek += abs(head - req[i]);
                head = req[i];
            }
        }
        seek += abs(head - 0);
        head = 0;

        for (i = 0; i < n; i++) {
            if (req[i] > head) {
                printf("%d ", req[i]);
                seek += abs(head - req[i]);
                head = req[i];
            }
        }
    }

    printf("\n\nTotal Seek Time = %d\n", seek);
    return 0;
}

#include <stdio.h>

int main() {
    int frames[10], pages[50];
    int n, f, i, j, k;
    int pageFaults = 0, found;
    int farthest, index, pos;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames
    for (i = 0; i < f; i++)
        frames[i] = -1;

    printf("\nPage\tFrames\n");

    for (i = 0; i < n; i++) {
        found = 0;

        // Check if page already present
        for (j = 0; j < f; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        // Page fault
        if (!found) {

            // Check for empty frame
            for (j = 0; j < f; j++) {
                if (frames[j] == -1) {
                    frames[j] = pages[i];
                    pageFaults++;
                    found = 1;
                    break;
                }
            }

            // If no empty frame, apply Optimal replacement
            if (!found) {
                farthest = i + 1;
                pos = -1;

                for (j = 0; j < f; j++) {
                    for (k = i + 1; k < n; k++) {
                        if (frames[j] == pages[k])
                            break;
                    }

                    // Page not used again
                    if (k == n) {
                        pos = j;
                        break;
                    }

                    // Find farthest future use
                    if (k > farthest) {
                        farthest = k;
                        pos = j;
                    }
                }

                if (pos == -1)
                    pos = 0;

                frames[pos] = pages[i];
                pageFaults++;
            }
        }

        // Display frame contents
        printf("%d\t", pages[i]);
        for (j = 0; j < f; j++) {
            if (frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);

    return 0;
}

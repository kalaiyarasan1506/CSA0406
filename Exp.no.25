#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main()
{
    int fd;
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;

    /* -------- fcntl & lseek -------- */
    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);
    write(fd, "UNIX I/O Calls", 14);

    printf("File descriptor flags: %d\n", fcntl(fd, F_GETFL));

    lseek(fd, 0, SEEK_SET);
    printf("File offset reset to beginning\n");

    close(fd);

    /* -------- stat -------- */
    stat("sample.txt", &fileStat);
    printf("File size: %ld bytes\n", fileStat.st_size);
    printf("File permissions: %o\n", fileStat.st_mode & 0777);

    /* -------- opendir & readdir -------- */
    dir = opendir(".");
    if (dir)
    {
        printf("\nFiles in current directory:\n");
        while ((entry = readdir(dir)) != NULL)
            printf("%s\n", entry->d_name);
        closedir(dir);
    }

    return 0;
}
